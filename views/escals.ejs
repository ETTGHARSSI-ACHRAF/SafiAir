<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="css/dashbord.css" />
    <title>dashbord SafiAir</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">SafiAir</div>
            <div class="list-group list-group-flush my-3">
                <a href="/dashbord" class="list-group-item list-group-item-action bg-transparent second-text active">Vol</a>
                <a href="/escale" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Escale</a>
                <a href="/extra" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Extra</a>
                <a href="/logout" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold"><i
                        class="fas fa-power-off me-2"></i>Logout</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            

            <div class="container-fluid px-4">
                
                <div class="my-5">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="fs-4 mb-3">les Escals</h3>
                        </div>
                        <div class="col-md-6 d-flex flex-row-reverse mb-1">
                            <button class=" btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal">+</button>
                        </div>
                    </div>
                    <!-- <button type="button" class="btn btn-outline-danger me-2"><i class="fas fa-trash-alt"></i></button> -->
                    
                    <div class="col">
                        <table class="table bg-white rounded shadow-sm  table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">id</th>
                                    <th scope="col">Ville Escale</th>
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(let j = 0 ; j< escals.length ; j++){%>
                                <tr>
                                    <td><%=escals[j].id_escal%></td>
                                    <td><%=escals[j].ville_escal%></td>
                                    <td class="d-flex"><form action="/deleteEscale/<%=escals[j].id_escal%>" method="post"><button type="submit" class="btn btn-outline-danger me-2"><i class="fas fa-trash-alt"></i></button></form><button type="button" data-bs-toggle="modal" data-bs-target="#<%=escals[j].ville_escal%>" class="btn btn-outline-info"><i class="fas fa-edit"></i></button></td>
                                </tr>
                                <div class="modal fade" id="<%=escals[j].ville_escal%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h5 class="modal-title" id="exampleModalLabel">Modifier Escale</h5>
                                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/modifierEscale" method="post">
                                                <div class="mb-3">
                                                    <label class="form-label">Nom Ville</label>
                                                    <input type="hidden" value="<%=escals[j].id_escal%>" name="id">
                                                    <input type="text" class="form-control" name="nom_v" value="<%=escals[j].ville_escal%>">
                                                </div>
                                              
                                                <button type="submit" class="btn btn-outline-info col-12">Submit</button>
                                              </form>
                                        </div>
                                
                                      </div>
                                    </div>
                                  </div>
                                <%}%>
                                
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>
    <!-- Button trigger modal -->

  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter Escale</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/ajouterEscale" method="post">
                <div class="mb-3">
                    <label class="form-label">Nom Ville</label>
                    <input type="text" class="form-control" name="nom_v">
                </div>
              
                <button type="submit" class="btn btn-outline-info col-12">Submit</button>
              </form>
        </div>

      </div>
    </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>