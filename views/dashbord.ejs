<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="css/dashbord.css" />
    <title>dashbord SafiAir</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">SafiAir</div>
            <div class="list-group list-group-flush my-3">
                <a href="/dashbord" class="list-group-item list-group-item-action bg-transparent second-text active">Vol</a>
                <a href="/escale" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Escale</a>
                <a href="/extra" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Extra</a>
                <a href="/logout" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold"><i
                        class="fas fa-power-off me-2"></i>Logout</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            

            <div class="container-fluid px-4">
                
                <div class="my-5">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="fs-4 mb-3">les Vols</h3>
                        </div>
                        <div class="col-md-6 d-flex flex-row-reverse mb-1">
                            <button class=" btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal">+</button>
                        </div>
                    </div>
                    <!-- <button type="button" class="btn btn-outline-danger me-2"><i class="fas fa-trash-alt"></i></button> -->
                    
                    <div class="col">
                        <table class="table bg-white rounded shadow-sm  table-hover text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Ville Depart</th>
                                    <th scope="col">Ville Ariver</th>
                                    <th scope="col">Ville escale</th>
                                    <th scope="col">Date Depart</th>
                                    <th scope="col">Date Ariver</th>
                                    <th scope="col">heure Depart</th>
                                    <th scope="col">heure Ariver</th>
                                    <th scope="col">nombre place</th>
                                    <th scope="col">prix</th>
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(let j = 0 ; j< vols.length ; j++){%>
                                <tr>
                                    <td><%=vols[j].nom_vol%></td>
                                    <td><%=vols[j].vile_D%></td>
                                    <td><%=vols[j].vile_A%></td>
                                    <td><%=vols[j].ville_escal%></td>
                                    <td><%=vols[j].date_D.toLocaleDateString()%></td>
                                    <td><%=vols[j].date_A.toLocaleDateString()%></td>
                                    <td><%=vols[j].heur_D%></td>
                                    <td><%=vols[j].heur_A%></td>
                                    <td><%=vols[j].nombre_place%></td>
                                    <td><%=vols[j].prix_vol%></td>
                                    <td class="d-flex"><form action="/delete/<%=vols[j].id_vol%>" method="post"><button type="submit" class="btn btn-outline-danger me-2"><i class="fas fa-trash-alt"></i></button></form><a data-bs-toggle="modal" data-bs-target="#<%=vols[j].nom_vol%>" class="btn btn-outline-info"><i class="fas fa-edit"></i></a></td>
                                </tr>
                                <div class="modal fade" id="<%=vols[j].nom_vol%>" tabindex="-1" aria-labelledby="<%=vols[j].nom_vol%>" aria-hidden="true">
                                    <div class="modal-dialog">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h5 class="modal-title" id="exampleModalLabel">Ajouter vols</h5>
                                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/ModdifierVols" method="post">
                                                <div class="mb-3">
                                                    <label class="form-label">Nom Vol</label>
                                                    <input type="hidden" name="id" value="<%=vols[j].id_vol%>">
                                                    <input type="text" class="form-control" name="nom_v" value="<%=vols[j].nom_vol%>">
                                                </div>
                                                <div class="d-flex justify-content-between">
                                
                                                    <div class="mb-3">
                                                        <label class="form-label">Ville Depart</label>
                                                      <input type="text" class="form-control" name="ville_d" value="<%=vols[j].vile_D%>" >
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Ville Ariver</label>
                                                        <input type="text" class="form-control" name="ville_a" value="<%=vols[j].vile_A%>">
                                                      </div>
                                                </div>
                                                  <div class="d-flex justify-content-between">
                                
                                                      <div class="mb-3">
                                                        <label class="form-label">Date Depart</label>
                                                        <input type="date" class="form-control" name="date_d" value="<%=vols[j].date_D%>">
                                                      </div>
                                                      <div class="mb-3">
                                                        <label class="form-label">Date Ariver</label>
                                                        <input type="date" class="form-control" name="date_a" value="<%=vols[j].date_A%>">
                                                      </div>
                                                  </div>
                                                  <div class="d-flex justify-content-between">
                                
                                                      <div class="mb-3">
                                                        <label class="form-label">Heure Depart</label>
                                                        <input type="text" class="form-control" name="heur_d" value="<%=vols[j].heur_D%>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Heure Ariver</label>
                                                      <input type="text" class="form-control" name="heur_a" value="<%=vols[j].heur_A%>" >
                                                    </div>
                                                  </div>
                                                <div class="mb-3">
                                                    <label class="form-label"> ville Escale</label>
                                                    <select class="form-select" aria-label="Default select example" name="escal">
                                                        <option hidden selected></option>
                                                        <%for(let i = 0 ; i< extras.length ; i++){%>
                                                        <option value="<%=extras[i].id_escal%>"><%=extras[i].ville_escal%></option>
                                                        <%}%>
                                                      </select>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">prix</label>
                                                    <input type="number" class="form-control" name="prix" value="<%=vols[j].prix_vol%>">
                                                </div>
                                                <button type="submit" class="btn btn-outline-info col-12">Submit</button>
                                              </form>
                                        </div>
                                
                                      </div>
                                    </div>
                                  </div>
                                <%}%>
                                
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>
    <!-- Button trigger modal -->

  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter vols</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/ajouterVols" method="post">
                <div class="mb-3">
                    <label class="form-label">Nom Vol</label>
                    <input type="text" class="form-control" name="nom_v">
                </div>
                <div class="d-flex justify-content-between">

                    <div class="mb-3">
                        <label class="form-label">Ville Depart</label>
                      <input type="text" class="form-control" name="ville_d" >
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ville Ariver</label>
                        <input type="text" class="form-control" name="ville_a">
                      </div>
                </div>
                  <div class="d-flex justify-content-between">

                      <div class="mb-3">
                        <label class="form-label">Date Depart</label>
                        <input type="date" class="form-control" name="date_d">
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Date Ariver</label>
                        <input type="date" class="form-control" name="date_a">
                      </div>
                  </div>
                  <div class="d-flex justify-content-between">

                      <div class="mb-3">
                        <label class="form-label">Heure Depart</label>
                        <input type="text" class="form-control" name="heur_d">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Heure Ariver</label>
                      <input type="text" class="form-control" name="heur_a" >
                    </div>
                  </div>
                <div class="mb-3">
                    <label class="form-label"> ville Escale</label>
                    <select class="form-select" aria-label="Default select example" name="escal">
                        <option hidden selected>ville Escale</option>
                        <%for(let i = 0 ; i< extras.length ; i++){%>
                        <option value="<%=extras[i].id_escal%>"><%=extras[i].ville_escal%></option>
                        <%}%>
                      </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">prix</label>
                    <input type="number" class="form-control" name="prix">
                </div>
                <button type="submit" class="btn btn-outline-info col-12">Submit</button>
              </form>
        </div>

      </div>
    </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>